{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }

  },
  "ConnectionStrings": {
    "VoteSystemConnStr": "Server=localhost ; Database= OnlineVotingSystem ; User Id=postgres ; Password= 12345;"
  },
  "Jwt": {
    "Key": "WelcomeToOnlineVoting@123456789WelcomeToOnlineVoting@123456789",
    "Issuer": "JwtIssuer",
    "Audience": "JwtAudience",
    "Subject": "JwtSubject"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/MyLog-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30, // Retain last 30 days of logs
          "fileSizeLimitBytes": 10485760, // 10 MB per file
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "MSLoggingAPI"
    }
  },

  "AllowedHosts": "*"
}
